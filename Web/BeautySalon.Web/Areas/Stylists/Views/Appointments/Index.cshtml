@{
    ViewData["Title"] = "Stylist's dashboard";
}

<partial name="_TitlePageSection" />
<section>
    <div class="row">
        <div class="col-md-3">
            <partial name="_NavBarStylist" />
        </div>
        <div class="col-md-9">
            <h2 class="offset-md-4">Requests from clients</h2>
            <div id="requests" class="col-md-12 hidden">
                <vc:request-appoitment></vc:request-appoitment>
            </div>
            <a id="request-appointment" class="btn btn-outline-primary p-1 px-3 py-2 mb-4 offset-5">Show</a>
            <div class="col-md-12">
                <h2 class="text-center">My Appointments</h2>
                <hr />
                <div id='calendar'></div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/getCalendar.js" asp-append-version="true"></script>
    <script src="~/js/showAppoitmentsRequests.js" asp-append-version="true"></script>

    <script>getCalendar();</script>
    <script>showAppoitmentsRequests();</script>
}
