@using BeautySalon.Web.ViewModels.Answers.ViewModels;
@model AllNewAnswersForUserViewModel;

<section class="hero-wrap hero-wrap-2 custom-margin-identity administration" style="background-image: url('/images/bg_2.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-3 bread">New Answers</h1>
                <p class="breadcrumbs">
                    <span class="mr-2"><a asp-area="" asp-controller="Users" asp-action="Index">Dashboard</a></span>
                </p>
            </div>
        </div>
    </div>
</section>
<section>
    <div class="row">
        <div class="col-md-3">
            <partial name="_NavBarUserPartial" />
        </div>
        <div class="col-md-8">
            <div class="col-md-12">
                <div class="input-group col-md-12">
                    @if (Model.Answers.ToList().Count == 0)
                    {
                        <a asp-area="" asp-controller="Answers" asp-action="GetUsersAllAnswers" 
                           class="btn btn-primary p-1 px-3 py-2 mb-4 offset-5">My Mail Box
                        </a>
                    }
                </div>
                <h2 class="text-center">New Answers</h2>
                <hr />
            </div>
            <div class="container">
                <div class="row no-gutters">
                    @foreach (var answer in Model.Answers)
                    {
                        <div class="col-md-4 d-flex align-items-stretch">
                            <div class="offer-deal text-center px-4 px-lg-5">
                                <div class="img" style="background-image: url(@answer.StylistPicture);"></div>
                                <div class="text mt-4">
                                    <h3 class="mb-4">@answer.Title</h3>
                                    <div>
                                        <i class="fas fa-calendar-alt theme-color-gold">
                                            <span class="tag-cloud-link thin">@answer.FormattedCreatedOn</span>
                                        </i>
                                        <i class="fas fa-user-edit theme-color-gold">
                                            <span class="tag-cloud-link thin"> @answer.StylistFullName</span>
                                        </i>
                                    </div>
                                    <p><a asp-area="" asp-controller="Answers" asp-action="SeeAnswer" asp-route-id="@answer.Id" class="btn btn-white px-4 py-3">See Answer<span class="ion-ios-arrow-round-forward"></span></a></p>
                                </div>
                            </div>
                        </div>
                    }
                    @if (Model.Answers.ToList().Count == 0)
                    {
                        <h4 class="offset-4">You don't have any new answers!</h4>
                    }
                </div>
            </div>
        </div>
    </div>
</section>