@using BeautySalon.Web.ViewModels.Articles.ViewModels;
@model AllArticlesViewModel;


<div class="row mt-5">
    <div class="col text-center">
        <div class="block-27">
            <ul>
                @if (this.Model.CurrentPage == 1)
                {
                    <li class="disabled">
                        <a>&lt;</a>
                    </li>
                }
                else
                {
                    <li>
                        <a asp-controller="Articles" asp-action="GetAll"
                           asp-route-currentPage="@(this.Model.CurrentPage - 1)">&lt;</a>
                    </li>
                }


                @for (int i = 1; i <= Model.PagesCount; i++)
                {
                    var active = i == this.Model.CurrentPage ? "active" : string.Empty;
                    <li class="@active">
                        <a asp-controller="Articles" asp-action="GetAll" asp-route-currentPage="@i">@i</a>
                    </li>
                }

                @if (this.Model.CurrentPage == this.Model.PagesCount)
                {
                    <li class="disabled"><a>&gt;</a></li>
                }
                else
                {
                    <li>
                        <a asp-controller="Articles" asp-action="GetAll"
                           asp-route-currentPage="@(this.Model.CurrentPage + 1)">&gt;</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>