@using BeautySalon.Web.ViewModels.Appointments.ViewModels;
@model AllBaseAppoitmentViewModel;

@{
    ViewData["Title"] = "Client's dashboard";
}

<partial name="_TitlePageSection" />


<section>
    <div class="row">
        <div class="col-md-3">
            <partial name="_NavBarClientPartial" />
        </div>
        <div class="col-md-8">
            <div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header">
                    <img src="..." class="rounded mr-2" alt="...">
                    <strong class="mr-auto">Bootstrap</strong>
                    <small class="text-muted">11 mins ago</small>
                    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="toast-body">
                    Hello, world! This is a toast message.
                </div>
            </div>
            <h2 class="text-center">Dashboard</h2>
            <hr />
            <h3 class="text-center">Upcoming Appointments</h3>
            <partial name="_AppointmentsTablePartial" model="@Model.Appoitments" />
        </div>
    </div>
</section>