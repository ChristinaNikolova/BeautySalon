@using BeautySalon.Web.ViewModels.Procedures.ViewModels;
@model AllProcedureReviewsViewModel;

<section class="ftco-section testimony-section custom-padding">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-3">
            <div class="col-md-10 heading-section ftco-animate text-center">
                <h2 class="mb-1 heading-color">Reviews</h2>
            </div>
        </div>
        <div class="row ftco-animate">
            <div class="col-md-12">
                @if (Model.Reviews.Count() == 0)
                {
                    <h5>There are no reviews yet!</h5>
                }
                else
                {
                    <div class="carousel-testimony owl-carousel">
                        @foreach (var review in Model.Reviews)
                        {
                            <div class="item">
                                <div class="testimony-wrap p-4 pb-5">
                                    <div class="text">
                                        <div class="line pl-5">
                                            <p class="mb-4 pb-1">@review.Content</p>
                                            <span class="quote d-flex align-items-center justify-content-center">
                                                <i class="icon-quote-left"></i>
                                            </span>
                                        </div>
                                        <div class="d-flex align-items-center">

                                            <div class="user-img" style="background-image:
                                              url('@review.ClientPicture')"></div>
                                            <div class="ml-4">
                                                <p class="name">@review.ClientUsername</p>
                                                <span class="position">@review.FormattedDate</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</section>