@using BeautySalon.Web.ViewModels.Reviews.ViewModels;
@model ReviewViewModel;


<div class="offer-deal text-center">
    <div class="img" style="background-image: url(@Model.ClientPicture);"></div>
    <div class="d-inline">
        <i class="fas fa-user-edit theme-color-gold"><span class="tag-cloud-link d-inline thin"> @Model.ClientUsername</span></i>
        <i class="fas fa-calendar-alt theme-color-gold"><span class="tag-cloud-link d-inline thin"> @Model.FormattedDate</span></i>
    </div>
    <div>
        <h4 class="theme-color-gold"><span><i class="fas fa-star theme-color-gold"></i></span> @Model.Points</h4>
        <h5><span>Review: </span></h5><p>@Model.Content</p>
    </div>
</div>
