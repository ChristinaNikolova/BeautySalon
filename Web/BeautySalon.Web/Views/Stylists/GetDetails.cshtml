@using BeautySalon.Web.ViewModels.Stylists.ViewModels;
@model DetailsStylistViewModel;

<section class="ftco-section ftco-intro custom-margin-identity" style="background-image: url(/images/bg_3.jpg);">
    <h1>@Model.FirstName @Model.LastName</h1>
    <div class="row align-items-stretch">
        <div class="col-md-6 ftco-animate">
            <div class="block-7">
                <div class="coach align-items-stretch">
                    <div class="img" style="background-image: url(@Model.Picture);"></div>
                </div>
            </div>
        </div>
        <div class="col-md-6 ftco-animate">
            <div class="block-7">
                <div class="coach align-items-stretch">
                    <div class="subheading"><strong>Category:</strong> @Model.CategoryName</div>
                    <div class="subheading"><strong>Speciality:</strong> @Model.JobTypeName</div>
                    <div class="subheading"><strong>Raiting:</strong> @Model.FormattedRaiting</div>
                    <div class="subheading"><strong>About me:</strong>@Model.Description</div>
                    <div class="subheading"><strong>Last Articles:</strong></div>
                    @foreach (var article in Model.Articles)
                    {
                        <div>@article.ArticleTitle</div>
                    }
                </div>
            </div>
        </div>
    </div>

</section>