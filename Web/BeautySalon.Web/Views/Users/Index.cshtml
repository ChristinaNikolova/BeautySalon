@using BeautySalon.Web.ViewModels.Users.ViewModels;
@model IndexUserViewModel;

@{
    ViewData["Title"] = "User's dashboard";
}

<partial name="_TitlePageSection" />
<partial name="_InfoMessagePartial" />
<section>
    <div class="row">
        <div class="col-md-3">
            <partial name="_NavBarUserPartial" />
        </div>
        <div class="col-md-9">
            <h2 class="text-center">Dashboard</h2>
            <hr />
            @if (Model.IsNewAnswer)
            {
                <div class="col-md-4 contact-info ftco-animate bg-light p-2 offset-md-4 mb-1">
                    <div class="row">
                        <div class="col-md-12 mb-1">
                            <h6 class="text-center">You have new Answer!</h6>
                            <a asp-area="" asp-controller="Answers" asp-action="GetNewAnswersForUsersQuestion" class="btn btn-outline-primary p-1 px-3 py-2 offset-md-4">Read</a>
                        </div>
                    </div>
                </div>

            }
            @if (Model.HasToReview)
            {
                <div class="col-md-4 contact-info ftco-animate bg-light p-2 offset-md-4">
                    <div class="row">
                        <div class="col-md-12 mb-1">
                            <h6 class="text-center">You have Past Appointment to review!</h6>
                            <a asp-area="" asp-controller="Appointments" asp-action="GetUsersHistory" class="btn btn-outline-primary p-1 px-3 py-2 offset-md-4">Review</a>
                        </div>
                    </div>
                </div>
            }
            <h3 class="text-center">Upcoming Appointments</h3>
            <partial name="_AppointmentsTablePartial" model="@Model.Appoitments" />
        </div>
    </div>
</section>